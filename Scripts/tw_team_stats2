TEAM_STATS_SEASON.item("Ausschlüsse")         = "RED_CARDS"
TEAM_STATS_SEASON.item("Ohne Gegentor")         = "CLEAN_SHEETS"
TEAM_STATS_SEASON.item("Punkte")                = "POINTS"



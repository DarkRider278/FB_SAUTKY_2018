'TEAM_STATS_SEASON.item("Schüsse von außerhalb") = "SHOTS_OUTBOX"
'TEAM_STATS_SEASON.item("Kopfbälle")             = "SHOTS_HEAD"
'TEAM_STATS_SEASON.item("Eckbälle")              = "CORNERS"
TEAM_STATS_SEASON.item("Elfmeter Tore")         = "PENALTIES"
